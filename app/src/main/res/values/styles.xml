<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="pre" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--question point-->
    <style name="question_point" parent="pre">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/font_size</item>
    </style>
    <!--question style-->
    <style name="question" parent="pre">
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:layout_marginBottom">@dimen/small</item>
        <item name="android:layout_marginTop">@dimen/small</item>
        <item name="android:textColor">@color/question_color</item>
    </style>
    <!--answer-->
    <style name="answer" parent="pre">
        <item name="android:paddingLeft">@dimen/small</item>
    </style>

</resources>
